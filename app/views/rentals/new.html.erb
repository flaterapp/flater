<div class="container">
	<h1>Create a new rental</strong></h1>
	<br>
	<p class="lead d-flex justify-content-between">
		<span><i class="fas fa-map-marker-alt text-primary"></i> <%= @flat.address %></span>
		<span><i class="fas fa-bed text-primary"></i> <%= pluralize(@flat.nb_rooms, 'room') %></span>
		<span><i class="fas fa-vector-square text-primary"></i> <%= @flat.surface.to_i %> m<sup>2</sup></span>
		<span><i class="fas fa-couch text-primary"></i> <%= @flat.furnished ? "Furnished"  : "Not furnished" %></span>
	</p>

	<div class="row">
		<div class="col col-sm-12 col-lg-8">
			<%= simple_form_for([@flat, @rental]) do |f| %>
		  <div class="form-inputs">
				<%= f.input :description, label: "Complementary information", input_html: { value: @flat.description } %>
		    <%= f.input :start_date, as: :date, html5:true, input_html: { :value => Date.today, class: "datepicker"} %>
		    <%= f.input :initial_rent, label: "Initial rent (€ / month, excl. charges)", input_html: { value: (@flat.surface*14).to_i } %>
		    <%= f.button :submit, class: "btn btn-primary" %>
      	<%= link_to "‹ Back", :back, class: 'btn btn-secondary' %>
		  </div>
		<% end %>
		</div>
		<div class="col col-sm-12 col-lg-4">
			<%# FLATER BOT %>
			<%= render 'layouts/shared/flater-bot',
					bot_message: "<p><strong class=\"text-primary\">Flater Bot:</strong> Hey #{current_user.first_name}! Do you know typical rent in this neighbourhood goes from <strong>#{(@flat.surface*14).to_i}€</strong> to <strong>#{(@flat.surface*16).to_i}€</strong> per month for a <strong>#{'furnished ' if @flat.furnished}#{@flat.surface.to_i} m²</strong>flat with <strong>#{pluralize(@flat.nb_rooms, 'room')}</strong>?</p>
					<p>If you have any question, just ask!</p>"
			%>
		</div>
	</div>
</div>

