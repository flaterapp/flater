<h1>Organize visit for rental <%= @rental.id %> (for flat <%= @flat.id %>)</h1>

<div>

	<p><strong>You have selected the following candidates for the visit:</strong></p>
		<ul>
			<% @rental.dossiers.each do |dossier| %>
				<% if dossier.status == "ok_for_visit"%>
					<li>
			<!-- DESCRIPTION -->
						<%= "dossier: id #{dossier.id} - #{dossier.candidate.first_name} #{dossier.candidate.last_name} (#{dossier.candidate.email})" %>
					</li>
				<% end %>
			<% end %>
		</ul>


	<%= simple_form_for (@task) do |f| %>
		<%= f.error_notification %>
		<%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
		<%= f.input :rental_id, :as => :hidden, :input_html => { :value => @rental.id } %>
		<%= f.input :status, :as => :hidden, :input_html => { :value => 0 } %>
		<%= f.input :action, :as => :hidden, :input_html => { :value => 'Visit' } %>
		<%= f.input :date, as: :date, html5:true,:input_html => { :value => Date.today, class: "datepicker"} %>
		<%= link_to "Back", "#" , {:class=>"btn btn-info"} %>
		<%= f.button :submit, class: "btn-primary" %>
	<% end %>

</div>

