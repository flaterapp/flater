<div class="container">
  <div class="row">
    <div class="col-sm-4 pr-0">
      <div class="chat-list">
        <h4>My messages:</h4>
      </div>
      <div class="room-list">
        <% User.all.each do |user| %>
          <div class="d-flex justify-content-between">
            <p><%= link_to user.first_name, conversations_path(user_id: user), method: :post %></p>
          </div>
        <% end %>
        <hr>
      </div>
    </div>
    <div class="col-sm-8 pl-0">
    </div>
  </div>
</div>
