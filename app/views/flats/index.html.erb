<div class="flat-container">



    <div class="card-flats">
    	<h1>
    		<i class="fas fa-building"></i>
    		My flats near <i class="fas fa-map-marker-alt small"></i> <strong>Lyon</strong>
    		<span class="badge badge-pill badge-primary"><%= current_user.flats.count %></span>
    	</h1>

    	<ul id="flats-map" class="list-group list-group-flush">
        	<li class="list-group-item d-flex justify-content-between">
            <strong>Flats to re-rent:</strong></li>
                <% @flats.each do |flat| %>
                    <% if flat.to_rent == true %>
                        <%= render 'layouts/shared/flat_item_in_menu',
                    flat: flat %>
                    <% end %> 
        	<% end %>
            <li class="list-group-item d-flex justify-content-between">
            <strong>Other flats:</strong></li>
                <% @flats.each do |flat| %>
                   <% if flat.to_rent == false %>
                        <%= render 'layouts/shared/flat_item_in_menu',
                    flat: flat %>
                    <% end %> 
            <% end %>
    	</ul>
    </div>

    <%# MAPBOX %>
    <div id="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
