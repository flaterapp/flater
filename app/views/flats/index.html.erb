<div class="card-flats">
	<h1>
		<i class="fas fa-building"></i> 
		My flats 
		<span class="badge badge-pill badge-primary"><%= current_user.flats.count %></span>
	</h1>

	<ul class="list-group list-group-flush">
	<% @flats.each do |flat| %>
		<li class="list-group-item d-flex justify-content-between">
			<%= flat.address %>
			<div class="action">
				<%# TODO Find pending rental true => rental #show %>
				<%# ??? %>
				<%# OPTIMIZE Wording to create a new rental %>
				<%= raw("<a href=\"#{new_flat_rental_path(flat.id)}\" class=\"badge badge-pill badge-warning\">new rental</a>") if flat.to_rent %>
				<%= link_to raw("<a href=\"#{flat_path(flat.id)}\" class=\"badge badge-pill badge-primary\">Details</a>") %>
			</div>
		</li>
	<% end %>
	</ul>
</div>
<%# MAPBOX %>
<div id="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>