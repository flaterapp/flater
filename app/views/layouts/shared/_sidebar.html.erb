<div id="bs-canvas-right" class="bs-canvas bs-canvas-right position-fixed bg-light h-100">
	<header class="bs-canvas-header p-3 overflow-auto">
		<h4>
			<%# USER HEADER %>
      <% if user_signed_in? %>
				<%= image_tag "https://res.cloudinary.com/dtwpyokni/image/upload/v1558705228/maxime.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
				Hello <%= current_user.first_name %>!
			<%# GUEST HEADER %>
			<% else %>
				You must be logged in
			<% end %>
			<button type="button" class="bs-canvas-close float-right close" aria-label="Close" aria-expanded="false">
				<span aria-hidden="true" class="text-primary">&rsaquo;</span>
			</button>
		</h4>
	</header>
	<div class="dropdown-divider"></div>
	<%# USER MENU %>
	<% if user_signed_in? %>
		<%= link_to "Edit my account", edit_user_registration_path, class: "dropdown-item" %>
		<div class="dropdown-divider"></div>
		<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
	<%# GUESY MENU %>
	<% else %>
		<%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %> or 
		<%= link_to "Create an account", new_user_registration_path, class: "btn" %>
	<% end %>
</div>

